{
  "pluginAlias": "UniFi Access",
  "headerDisplay": "Full HomeKit support UniFi Access devices. See the [homebridge-unifi-access](https://github.com/hjdhjd/homebridge-unifi-protect) developer page for detailed documentation.",
  "pluginType": "platform",
  "singular": true,
  "customUi": true,
  "schema": {
    "properties": {
      "doorName": {
        "title": "Name of the door",
        "type": "string",
        "required": false
      },
      "doorId": {
        "title": "Id of the door",
        "type": "string",
        "required": false
      },
      "apiToken": {
        "title": "UniFi API-Token",
        "type": "string",
        "required": true,
        "description": "Fetch your api token in security settings in access console."
      },
      "consoleHost": {
        "title": "UniFi Console Host",
        "type": "string",
        "required": true
      },
      "consolePort": {
        "title": "UniFi Console Port",
        "type": "string",
        "default": "12445",
        "required": true
      },
      "doorOpenerDuration": {
        "title": "Duration of the door opener",
        "type": "number",
        "default": "5000",
        "required": true
      }
    }
  }
}
